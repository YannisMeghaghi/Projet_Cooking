<Window x:Class="Cooking.MesRecettes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cooking"
        mc:Ignorable="d"
        Title="MesRecettes" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listbox_recette" HorizontalAlignment="Left" Height="234" Margin="42,142,0,0" VerticalAlignment="Top" Width="256"/>
        <TextBlock x:Name="textblock_recup_id" HorizontalAlignment="Left" Height="49" Margin="-230,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <Label Content="Statistiques" HorizontalAlignment="Left" Height="66" Margin="50,63,0,0" VerticalAlignment="Top" Width="248" FontSize="35"/>
        <Button x:Name="bouton_infos_recette" Content="Voir infos" HorizontalAlignment="Left" Height="40" Margin="346,161,0,0" VerticalAlignment="Top" Width="220" FontSize="25" Click="bouton_infos_recette_Click"/>
        <Button x:Name="bouton_suppr_recette" Content="Supprimer une recette" HorizontalAlignment="Left" Height="40" Margin="346,262,0,0" VerticalAlignment="Top" Width="220" FontSize="20" Click="bouton_suppr_recette_Click"/>

    </Grid>
</Window>
